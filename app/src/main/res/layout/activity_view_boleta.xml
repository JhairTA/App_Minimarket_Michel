<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewBoleta">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="53dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewPedidos"
                android:layout_width="369dp"
                android:layout_height="673dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"


                android:backgroundTint="#FFFFFF"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp"
                app:cardElevation="7dp">

                <LinearLayout
                    android:layout_width="335dp"
                    android:layout_height="613dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="87dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="58dp"
                            android:layout_height="47dp"


                            android:gravity="center"
                            app:srcCompat="@drawable/tienda" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:text="Minimarket Michael"
                            android:textAlignment="center"
                            android:textColor="#4C4968"
                            android:textSize="30sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewusuario"
                            android:layout_width="32dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center_vertical"
                            android:text="Usuario:"
                            android:textAlignment="textStart"
                            android:textColor="#302C59"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/txtusuariopedido"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="17dp"
                            android:layout_weight="1"
                            android:elevation="8dp"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="hola"
                            android:textAlignment="textEnd"
                            android:textColor="#4C4968"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewtotal"
                            android:layout_width="61dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center_vertical"
                            android:text="Sub Total"
                            android:textAlignment="textStart"
                            android:textColor="#302C59"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/txtTotalproducto"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="17dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="TextView"
                            android:textAlignment="textEnd"
                            android:textColor="#4C4968"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewigv"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center_vertical"
                            android:text="Igv :"
                            android:textColor="#302C59"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/txtigv"
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="17dp"
                            android:layout_weight="1"

                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="18%"
                            android:textAlignment="textEnd"
                            android:textColor="#4C4968"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="17dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center_vertical"
                            android:text="Precio Total :"
                            android:textColor="#302C59"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtpreciototal"
                            android:layout_width="16dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="17dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="TextView"
                            android:textAlignment="textEnd"
                            android:textColor="#4C4968"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewcupon"
                            android:layout_width="20dp"
                            android:layout_height="52dp"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center_vertical"
                            android:text="Fecha :"
                            android:textColor="#302C59"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/txtfecha"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="17dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="TextView"
                            android:textAlignment="textEnd"
                            android:textColor="#4C4968"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewpago"
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center_vertical"
                            android:text="Medio de Pago :"
                            android:textColor="#302C59"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/metpago"
                            android:layout_width="37dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="17dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="MasterCard"
                            android:textAlignment="textEnd"
                            android:textColor="#4C4968"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="148dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/qr_code"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:srcCompat="@tools:sample/avatars" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="63dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textViewpago24"
                            android:layout_width="307dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="25dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:text='"Gracias por su compra"'
                            android:textColor="#4C4968"
                            android:textSize="18sp" />


                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="71dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FF5E00"
                    android:elevation="10dp"
                    android:fontFamily="@font/roboto_medium"
                    android:onClick="SeguirComprando"
                    android:text="Seguir comprando"
                    android:textColor="#ffff"
                    android:textSize="20sp" />


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>