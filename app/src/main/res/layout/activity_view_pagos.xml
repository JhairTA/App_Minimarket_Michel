<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDEC"
    tools:context=".ViewPagos">

    <androidx.cardview.widget.CardView
        android:layout_width="375dp"
        android:layout_height="704dp"
        android:layout_gravity="center"
        android:backgroundTint="#FFFFFF"
        android:foregroundGravity="center"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="11dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="653dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewprectotal"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/circularstd_bold"
                    android:gravity="center_vertical"
                    android:text="Precio Total:"
                    android:textColor="#4C4968"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtusuariopedido"
                    android:layout_width="wrap_content"
                    android:layout_height="63dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewmetpago"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Metodo de Pago"
                    android:textSize="24sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="139dp"
                android:layout_height="104dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/mastercardlogo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="4dp"
                    android:paddingStart="19dp"
                    android:text="Numero de Targeta"
                    android:textColor="#4C4968"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtnrtargeta"
                    android:layout_width="335dp"
                    android:layout_height="44dp"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:drawableLeft="@drawable/baseline_credit_card_24"
                    android:ems="10"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLength="16"
                    android:inputType="number"
                    android:paddingEnd="8dp"
                    android:textColor="#737171"
                    android:textColorHint="#A6A5AA"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="41dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="4dp"
                    android:paddingStart="19dp"
                    android:text="Expiry date"
                    android:textColor="#4C4968"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:text="CVV"
                    android:textColor="#4C4968"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/txtcalendtarget"
                    android:layout_width="102dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:drawableLeft="@drawable/baseline_calendar_month_24"
                    android:ems="10"
                    android:maxLength="5"
                    android:fontFamily="@font/roboto_mono_medium"
                    android:hint="MM/AA"
                    android:inputType="textPersonName"
                    android:textColor="#737171"
                    android:textColorHint="#A6A5AA"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/txtcvv"
                    android:layout_width="109dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:drawableLeft="@drawable/baseline_credit_card_24"
                    android:ems="10"
                    android:fontFamily="@font/roboto_bold"
                    android:hint="123"
                    android:maxLength="3"
                    android:inputType="number"
                    android:textColor="#737171"
                    android:textColorHint="#A6A5AA"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:padding="4dp"
                    android:paddingStart="19dp"
                    android:text="Card Holder"
                    android:textColor="#49535D"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtnombretrg"
                    android:layout_width="393dp"
                    android:layout_height="48dp"
                    android:layout_margin="13dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:fontFamily="@font/roboto_bold"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:textColor="#737171"
                    android:textColorHint="#A6A5AA"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button2"
                    android:layout_width="315dp"
                    android:layout_height="79dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="#282B32"
                    android:fontFamily="@font/roboto_bold"
                    android:onClick="Pago"

                    android:text="Pagar"
                    android:textColor="#EFEEEE"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>