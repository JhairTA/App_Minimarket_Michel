<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondopedido"
    android:padding="15dp"
    tools:context=".ViewPagos">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="755dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewmetpago"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Metodo de Pago"
                android:textColor="#fff"
                android:textSize="40sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="401dp"

                android:layout_height="656dp"
                android:layout_gravity="center"
                android:backgroundTint="#DAEAFF"
                android:foregroundGravity="center"
                app:cardBackgroundColor="#D8E6F3"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="614dp"
                    android:onClick="boleta"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="39dp"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="189dp"
                        android:layout_height="156dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/mastercardlogo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="4dp"
                            android:paddingStart="19dp"
                            android:text="Numero de Targeta"
                            android:textColor="#2F2F2E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtnrtargeta"
                            android:layout_width="335dp"
                            android:layout_height="44dp"
                            android:layout_margin="15dp"
                            android:layout_weight="1"
                            android:background="@drawable/text_border"
                            android:drawableLeft="@drawable/baseline_credit_card_24"
                            android:ems="10"
                            android:fontFamily="@font/roboto_bold"
                            android:inputType="number"
                            android:maxLength="16"
                            android:paddingEnd="8dp"
                            android:textColor="#737171"
                            android:textColorHint="#A6A5AA"
                            android:textSize="15dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="41dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="4dp"
                            android:paddingStart="19dp"
                            android:text="Expiry date"
                            android:textColor="#2F2F2E"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:text="CVV"
                            android:textColor="#2F2F2E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/txtcalendtarget"
                            android:layout_width="102dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/text_border"
                            android:drawableLeft="@drawable/baseline_calendar_month_24"
                            android:ems="10"
                            android:fontFamily="@font/roboto_mono_medium"
                            android:hint="MM/AA"
                            android:inputType="textPersonName"
                            android:maxLength="5"
                            android:textColor="#737171"
                            android:textColorHint="#A6A5AA"
                            android:textSize="13dp" />

                        <EditText
                            android:id="@+id/txtcvv"
                            android:layout_width="109dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/text_border"
                            android:drawableLeft="@drawable/baseline_credit_card_24"
                            android:ems="10"
                            android:fontFamily="@font/roboto_bold"
                            android:hint="123"
                            android:inputType="number"
                            android:maxLength="3"
                            android:textColor="#737171"
                            android:textColorHint="#A6A5AA"
                            android:textSize="13dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="4dp"
                            android:paddingStart="19dp"
                            android:text="Card Holder"
                            android:textColor="#2F2F2E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="76dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/txtnombretrg"
                            android:layout_width="393dp"
                            android:layout_height="48dp"
                            android:layout_margin="13dp"
                            android:layout_weight="1"
                            android:background="@drawable/text_border"
                            android:drawableLeft="@drawable/baseline_person_24"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:fontFamily="@font/roboto_bold"
                            android:hint="Nombre"
                            android:inputType="textPersonName"
                            android:textColor="#737171"
                            android:textColorHint="#A6A5AA"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="315dp"
                            android:layout_height="79dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="#2F2F2E"
                            android:fontFamily="@font/roboto_bold"
                            android:onClick="Pago"

                            android:text="Pagar"
                            android:textColor="#EFEEEE"
                            android:textSize="20sp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>